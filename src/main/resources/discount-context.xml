<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                http://www.springframework.org/schema/util
 	        	http://www.springframework.org/schema/util/spring-util-4.3.xsd">

    <util:list id="discountStrategyList">
        <bean id="birthdayDiscountStrategy"
              class="com.epam.spring.movieTheaterManagement.discount.BirthdayDiscountStrategy"
              p:birthdayDiscount="#{${birthday.discount}}"/>
        <bean id="ticketNumberDiscountStrategy"
              class="com.epam.spring.movieTheaterManagement.discount.TicketNumberDiscountStrategy"
              p:ticketNumber="${ticket.number}"
              p:ticketNumberDiscount="#{${ticket.number.discount}}"/>
    </util:list>

    <bean id="theaterDiscountService"
          class="com.epam.spring.movieTheaterManagement.service.TheaterDiscountService">
        <constructor-arg ref="discountStrategyList"/>
    </bean>
</beans>